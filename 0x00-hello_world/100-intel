#!/bin/bash

# Check if the C file is provided as an argument
if [ -z "$1" ]; then
    echo "Usage: $0 <C_FILE>"
    exit 1
fi

# Get the C file name from the first argument
CFILE="$1"

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
    echo "Error: C file '$CFILE' does not exist."
    exit 1
fi

# Extract the base name (without extension) from the C file
BASENAME=$(basename "$CFILE" .c)

# Generate the assembly code and save it to a .s file
gcc -S -masm=intel "$CFILE" -o "$BASENAME.s"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code saved to '$BASENAME.s'"
else
    echo "Error: Compilation failed."
    exit 1
fi
